<h1 class='title is-1'>Clientes</h1>

<div id="clients">
  <% if @clients.empty? %>

    <p>No existen registros de cliente</p>
  <% else %>

    <% @clients.each do |client| %>
      <%= render client %>
      <p>
        <%= link_to "Detalles", client %>
      </p>
    <% end %>
  <%end%>
</div>

